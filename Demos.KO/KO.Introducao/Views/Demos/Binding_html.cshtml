@{
    ViewBag.Title = "Binding - html";
}

<h2>Binding html</h2>

<div data-bind="html: details"></div>

@section scripts{
    <script src="~/Scripts/knockout-3.3.0.js"></script>
    <script>
        var viewModel = {
            details: ko.observable() // Initially blank
        };
        viewModel.details("<em>Para maiores informações, acesse o relatório <a href='report.html'>Relat.html</a>.</em>"); // HTML content appears

        ko.applyBindings(viewModel);
    </script>
}